<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_Profile">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="468dp"
        android:layout_height="260dp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/blue_bg2" />

    <EditText
        android:id="@+id/txtEmail2"
        android:layout_width="307dp"
        android:layout_height="50dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullname2" />

    <EditText
        android:id="@+id/fullname2"
        android:layout_width="307dp"
        android:layout_height="50dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.462" />

    <EditText
        android:id="@+id/PhoneNumber2"
        android:layout_width="307dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="number"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Adress2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/Adress2"
        android:layout_width="152dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:ems="10"
        android:hint="Adress"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.799"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password"
        tools:ignore="TouchTargetSizeCheck" />


    <EditText
        android:id="@+id/dob2"
        android:layout_width="144dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:ems="10"
        android:hint="dob"
        android:inputType="text"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/PhoneNumber2"
        app:layout_constraintEnd_toStartOf="@+id/Adress2"
        app:layout_constraintTop_toBottomOf="@+id/Password"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:errorEnabled="true"
        app:helperTextTextColor="@android:color/holo_red_dark"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail2"
        app:passwordToggleEnabled="true"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/txtPassword2"
            android:layout_width="307dp"
            android:layout_height="50dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:ems="10"
            android:hint="Password"
            android:inputType="numberPassword"
            android:paddingStart="12dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="156dp"
        android:layout_height="128dp"
        android:layout_marginBottom="173dp"
        app:layout_constraintBottom_toTopOf="@+id/fullname2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/imglogo" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="83dp"
        android:text="My Profile"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/fullname2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

</androidx.constraintlayout.widget.ConstraintLayout>